    "type": "module",
    "devDependencies": {
        "@tailwindcss/cli": "^4.1.5",
        "@tailwindcss/forms": "^0.5.10",
        "@tailwindcss/vite": "^4.1.5",
        "@types/node": "^22.15.12",
        "@vitejs/plugin-vue": "^5.2.3",
        "cross-env": "^7.0.3",
        "tailwindcss": "^4.1.5",
        "daisyui": "^5.0.35",
        "vite": "^6.3.5",
        "vite-plugin-live-reload": "^3.0.4",
        "prettier": "^3.5.3",
        "prettier-plugin-tailwindcss": "^0.6.11"
    },
    "removeDependencies": {
        "@wordpress/scripts": "^30.1.0",
        "rtlcss": "^4.3.0",
        "gulp": "^5.0.0",
        "@heroicons/vue": "^2.2.0",
        "@heroicons/react": "^2.2.0",
        "@headlessui/vue": "^1.7.23"
    },
    "dependencies": {
        "axios": "^1.9.0",
        "vue": "^3.5.13"
    },
    "scripts": {
        "dev": "cross-env NODE_ENV=development vite",
        "build": "vite build",
        "cli:dev": "npx @tailwindcss/cli -i ./assets/tailwind/tailwind.css -o ./assets/dist/main.css --watch",
        "cli:build": "npx @tailwindcss/cli -i ./assets/tailwind/tailwind.css -o ./assets/dist/main.min.css --minify",
        "format": "prettier --write ./assets/tailwind/*.css",
        "check": "prettier --check ./assets/tailwind/*.css",
        "archive": "dir-archiver --src ./ --dest ../aiya-cms-release.zip --exclude .DS_Store .git .gitattributes .github .gitignore .gitmodules screenshot vendor composer.json composer.lock node_modules package.json package-lock.json gulpfile.js webpack.config.js tailwind.css"
    }
